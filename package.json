{
  "name": "website",
  "version": "5.0.0",
  "description": "Personal website",
  "author": "Mateo Olarte <mateo.olarte8@gmail.com>",
  "license": "MIT",
  "private": true,
  "sideEffects": false,
  "browserslist": [
    "defaults",
    "not IE 11",
    "maintained node versions"
  ],
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "react",
      "jsx-a11y"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:react-hooks/recommended",
      "prettier"
    ],
    "settings": {
      "react": {
        "version": "latest"
      }
    },
    "rules": {
      "react/react-in-jsx-scope": "off",
      "no-undef": "warn"
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-recommended",
      "stylelint-config-styled-components",
      "stylelint-config-prettier"
    ],
    "overrides": [
      {
        "files": [
          "**/styles.ts"
        ],
        "customSyntax": "@stylelint/postcss-css-in-js"
      }
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint",
    "*.{js,jsx,ts,tsx,json,md,mdx}": "prettier --write",
    "./app/**/styles.ts": "stylelint"
  },
  "scripts": {
    "build": "remix build",
    "predev": "rimraf ./public/_redirects",
    "dev": "remix dev",
    "start": "netlify serve",
    "typecheck": "tsc -b",
    "fmt": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md, mdx}\"",
    "lint:scripts": "eslint app/ --ext .js,.jsx,.ts,.tsx",
    "lint:styles": "stylelint 'app/**/styles.ts'",
    "lint": "yarn lint:scripts && yarn lint:styles"
  },
  "dependencies": {
    "@netlify/functions": "^1.3.0",
    "@notionhq/client": "^2.2.3",
    "@remix-run/netlify": "^1.14.3",
    "@remix-run/node": "^1.14.3",
    "@remix-run/react": "^1.14.3",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "front-matter": "^4.0.2",
    "marked": "^4.2.5",
    "notion-to-md": "^2.5.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "styled-components": "^5.3.6",
    "styled-theming": "^2.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.14.3",
    "@remix-run/serve": "^1.14.3",
    "@stylelint/postcss-css-in-js": "^0.38.0",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@types/styled-components": "^5.1.26",
    "@types/styled-theming": "^2.2.5",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "postcss-syntax": "^0.36.2",
    "prettier": "^2.8.1",
    "rimraf": "^4.1.4",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "typescript": "^4.9.4"
  }
}
